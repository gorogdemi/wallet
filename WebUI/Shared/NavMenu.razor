<div class="top-row navbar navbar-dark">
    <a class="navbar-brand" href="">Pénztárcák</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <FluentIcon Icon="@Icons.Regular.Size20.Wallet" Color="Color.Fill" /> Tárcák
            </NavLink>
            <NavLink class="nav-link" href="transactions">
                <FluentIcon Icon="@Icons.Regular.Size20.ArrowsBidirectional" Color="Color.Fill" /> Tranzakciók
            </NavLink>
            <NavLink class="nav-link" href="favorites">
                <FluentIcon Icon="@Icons.Regular.Size20.Star" Color="Color.Fill" /> Kedvencek
            </NavLink>
            <NavLink class="nav-link" href="categories">
                <FluentIcon Icon="@Icons.Regular.Size20.Grid" Color="Color.Fill" /> Kategóriák
            </NavLink>
        </li>
    </ul>
</div>

@code {

    private bool _collapseNavMenu = true;

    private string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

}