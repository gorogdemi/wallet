@inherits ComponentBase

<div class="modal fade @_modalClass" tabindex="-1" role="dialog" style="display: @_modalDisplay">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="CloseAsync"></button>
            </div>
            <div class="modal-body">
                @Content
            </div>
            <div class="modal-footer">
                @Footer
                <button type="button" class="btn btn-secondary" @onclick="CloseAsync">@CloseButtonTitle</button>
            </div>
        </div>
    </div>
</div>

<div class="modal-backdrop fade @_modalClass" style="display: @_modalDisplay"></div>

@code {

    private string _modalDisplay = "none;";
    private string _modalClass = "";

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public string CloseButtonTitle { get; set; } = "MÃ©gsem";

    public virtual async Task OpenAsync()
    {
        _modalDisplay = "block;";
        await Task.Delay(100);
        _modalClass = "show";
    }

    public virtual async Task CloseAsync()
    {
        _modalClass = "";
        await Task.Delay(250);
        _modalDisplay = "none;";
    }

}